<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Scripts.Render("~/bundles/jquery")
    <script src="@Url.Content("~/Scripts/jquery.signalR-2.4.1.js")"></script>
    <script src="@Url.Content("~/signalr/hubs")"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary" >
        <div class="container">
            <button class="navbar-toggler" id="toggle-button" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav ml-auto">
                    <li><a class="navbar-brand" href="~/User/UserProfile">Profile</a></li>
                    <li><a class="navbar-brand" href="~/User/AdminOptions">Advanced</a></li>
                    <li>
                        <form action="/Base/LogOut" method="post">
                            <button class="btn btn-secondary my-sm-0" id="btnLogout" type="submit">Log Out</button>
                        </form>
                    </li>
                </ul>

            </div>
        </div>
    </nav>



    
        @RenderBody()

        <hr />
        <footer>
        </footer>

    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>
